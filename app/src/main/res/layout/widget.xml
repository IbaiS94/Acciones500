<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_layout"
    android:padding="16dp"
    android:background="@drawable/widget_fondo">

    <LinearLayout
        android:id="@+id/stock_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/widget_refresh"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando..."
            android:textSize="24sp"
            android:textStyle="bold"
 />

        <TextView
            android:id="@+id/widget_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$150.25"
            android:textSize="20sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/widget_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizado: 15:30"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/widget_refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/refresh"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:contentDescription="@string/refresh" />

</RelativeLayout>